{
	"private": true,
	"name": "tacocat-gallery-redux",
	"version": "1.0.0",
	"description":
		"Javascript front end for tacocat.com photo gallery built in React, Redux and Typescript",
	"keywords": ["javascript", "react", "redux", "typescript"],
	"license": "MIT",
	"author": "Dean Moses",
	"scripts": {
		"start": "run-p start-css start-static start-webpack",
		"build": "run-s build-js build-css build-static",
		"build-js":
			"webpack --config webpack.prod.js --define process.env.NODE_ENV=production",
		"start-static": "run-s build-static watch-static",
		"build-static": "run-s copy-static timestamp-static",
		"copy-static":
			"cpx 'src/public/**/*.{html,png,jpg,ico,xml,tx,json,appcache}' dist",
		"timestamp-static":
			"replace-in-file /TIMESTAMP/g $(date +\"%s\") dist/*.{html,css,js,appcache} --isRegex",
		"watch-static":
			"cpx 'src/public/**/*.{html,png,jpg,ico,xml,txt,json,appcache}' dist --watch",
		"start-webpack": "webpack-dev-server --open --config webpack.dev.js",
		"start-css": "run-s build-css watch-css",
		"build-css":
			"node-sass-chokidar src/styles/main.scss -o dist/ --source-map true --output-style compressed",
		"watch-css":
			"node-sass-chokidar src/styles/main.scss -o dist/ --source-map true --watch --recursive",
		"start-mockapi": "json-server --watch src/api/db.json --port 3001",
		"test": "jest",
		"deploy-staging":
			"rsync -r -a -v --delete --exclude '.DS_Store' --exclude 'mockdata' dist/ deanmoses@tacocat.com:~/tacocat.com/p3",
		"build-and-stage": "run-s build deploy-staging"
	},
	"dependencies": {
		"jquery": "^3.2.1",
		"localforage": "^1.5.5",
		"popper.js": "^1.12.9",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-quill": "^1.2.3",
		"react-redux": "^5.0.6",
		"react-router-dom": "^4.2.2",
		"redux": "^3.7.2",
		"redux-devtools-extension": "^2.13.2",
		"redux-persist": "^5.4.0",
		"redux-thunk": "^2.2.0"
	},
	"devDependencies": {
		"@types/jest": "^22.0.0",
		"@types/react": "^16.0.31",
		"@types/react-dom": "^16.0.3",
		"@types/react-redux": "^5.0.14",
		"@types/react-router-dom": "^4.2.3",
		"@types/react-test-renderer": "^16.0.0",
		"ajv": "^5.5.2",
		"awesome-typescript-loader": "^3.4.1",
		"bootstrap-sass": "^3.3.7",
		"cpx": "^1.5.0",
		"jest": "^22.0.4",
		"jshint": "^2.9.5",
		"json-server": "^0.12.1",
		"node-sass-chokidar": "0.0.3",
		"npm-run-all": "^4.1.2",
		"react-test-renderer": "^16.2.0",
		"replace-in-file": "^3.1.0",
		"source-map-loader": "^0.2.3",
		"ts-jest": "^22.0.0",
		"tslint": "^5.8.0",
		"typescript": "^2.6.2",
		"uglifyjs-webpack-plugin": "^1.0.0-rc.0",
		"webpack": "^3.10.0",
		"webpack-dev-server": "^2.9.7",
		"webpack-merge": "^4.1.1"
	},
	"jest": {
		"moduleFileExtensions": ["ts", "tsx", "js"],
		"moduleNameMapper": {
			"^@src(.*)$": "<rootDir>/src$1"
		},
		"transform": {
			"\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
	}
}
